@model IEnumerable<Cimob.Models.Candidatura.Pais>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Criar país</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomePais)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePais)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaisId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaisId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaisId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
