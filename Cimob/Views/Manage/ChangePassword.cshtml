@model ChangePasswordModel
<div class="DefaultPresentation" style="width:100%">
    <div class="vertical-menu">
        <a href="#" class="active">Gestão de conta</a>
        <a class="SubMenu" asp-area="" asp-controller="Manage" asp-action="ConsultarDados">Consultar Dados</a>
        <a class="SubMenuSelected" asp-area="" asp-controller="Manage" asp-action="ChangePassword">Alterar Password</a> @if (User.Identity.Name != "Cimob_esw@outlook.pt")
    {
        <a class="SubMenu" asp-area="" asp-controller="Manage" asp-action="AlterarDados">Alterar Dados</a>
        <a class="SubMenu" asp-area="" asp-controller="Manage" asp-action="VerCandidaturasPendentes">Estado Candidatura</a>
        <a class="SubMenu" asp-area="" asp-controller="Entrevistas" asp-action="IndexUser">Entrevistas Pendentes</a>
}
    </div>
    <div class="descriptionText">     

        <div class="row">
            <div class="col-md-6">
                <label style="color:red;">@ViewBag.aviso</label>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="OldPassword" class="form-control" placeholder="Palavra-passe Actual" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="NewPassword" class="form-control" placeholder="Nova palavra-passe" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder=" Confirmar palavra-passe" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Alterar</button>
                </form>
            </div>
        </div>
        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
    </div>
</div>