@model AlterarDadosModel
<div class="DefaultPresentation">
    <div class="vertical-menu">
        <a href="#" class="active">Gestão de conta</a>
        <a class="SubMenu" asp-area="" asp-controller="Manage" asp-action="ConsultarDados">Consultar Dados</a>
        <a class="SubMenuSelected" asp-area="" asp-controller="Manage" asp-action="AlterarDados">Alterar Dados</a>
        <a class="SubMenu" asp-area="" asp-controller="Manage" asp-action="ChangePassword">Alterar Password</a>
        <a class="SubMenu" asp-area="" asp-controller="Manage" asp-action="VerCandidaturasPendentes">Ver candidaturas Pendentes</a>
    </div>
    <div class="descriptionText">

        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>Nome do utilizador</label>
                        <input asp-for="Nome" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <select asp-for="EscolaId" class="form-control" asp-items="ViewBag.EscolaId"></select>
                        <span asp-validation-for="EscolaId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="PaisId" class="form-control" asp-items="ViewBag.PaisId"></select>
                        <span asp-validation-for="PaisId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="TipoDeUserId" class="form-control" asp-items="ViewBag.TipoDeUserId"></select>
                        <span asp-validation-for="TipoDeUserId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Guardar</button>
                </form>
            </div>
        </div>
        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
    </div>
</div>