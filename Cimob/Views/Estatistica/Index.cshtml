@model Cimob.Models.Estatística.Estatistica
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://cdn.anychart.com/releases/v8/js/anychart-base.min.js"></script>
    <script src="https://cdn.anychart.com/releases/v8/js/anychart-exports.min.js"></script>
    <script src="https://cdn.anychart.com/releases/v8/js/anychart-vml.min.js"></script>
    <link rel="stylesheet" href="https://cdn.anychart.com/releases/v8/css/anychart-ui.min.css" />
    <link rel="stylesheet" href="https://cdn.anychart.com/releases/v8/fonts/css/anychart.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
    <div class="DefaultPresentation" style="margin-top: -30px;">
        <div class="vertical-menu">
            <a href="#" class="active">Estatísticas</a>
            <a class="SubMenuSelected" asp-area="" asp-controller="Estatistica" asp-action="Index">Consultar Estatísticas</a>
            <a class="SubMenu" asp-area="" asp-controller="AjudaAutenticacaos" asp-action="Index" asp-route-id="7">Ajuda</a>
        </div>
        <div>
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" style="width:400px; margin-left:2%">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>           
            <div class="form-group">
                <select asp-for="Id" class="form-control" asp-items="ViewBag.Estatisticas"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>            
            <button type="submit" class="btn btn-default">Consultar Estatística</button>
        </form>
            </div>
        <div id="container" style="width: 1000px; height: 400px;margin-left:2%;margin-top: 1%"></div>
        <input type="hidden" id="Dados" value="@Model.Dados" />
        <input type="hidden" id="Nome" value="@Model.Nome" />
        <script>
            anychart.onDocumentReady(function () {
                var chart = anychart.fromXml(document.getElementById("Dados").value);
                chart.title(document.getElementById("Nome").value);
                chart.container("container");
                chart.draw();
            });
        </script>
    </div>
    </div>
</body>
</html>

