
@model IEnumerable<Cimob.Models.Candidatura.Escola>

    <h2>Parcerias do CIMOB</h2>  
    <div class="DefaultPresentation">
        <div class="vertical-menu">
            <a href="#" class="active">Parcerias</a>
            <a class="SubMenuSelected" asp-area="" asp-controller="Escolas" asp-action="searchEscolas">Consultar Parcerias</a>
            <a class="SubMenu" asp-area="" asp-controller="Home" asp-action="Team">Ajuda</a>
        </div>


        <div style="margin-left: 5%;width: 131%;">
            <form asp-controller="Escolas" asp-action="SearchEscolas">
                <p>
                    <input type="text" name="id" style="height:40px; width:400px" />

                    <button type="submit" class="btn btn-default">Pesquisar </button>

                </p>
            </form>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Url)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>

                                <td>
                                    <a href="@item.Url">Visitar</a>
                                </td>
                            </tr>
                    }
                }
                else
                {
                    <text>"Resultado não encontrado"</text>
            }

                    }
                </tbody>
            </table>
        </div>
    </div>


